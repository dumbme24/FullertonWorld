   <h3>Login </h3>                           


@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    
     <hr />

    if (ViewBag.LoginMessage != null)
    {
        <h3 style="color:red" >@ViewBag.LoginMessage </h3>
    <br />
    }
    
    
    <div class="editor-field">
        @Html.TextBoxFor(model => model.userEmail, new { @placeholder = "Email", autofocus="autofocus" })
        @Html.ValidationMessageFor(model => model.userEmail)
    </div>

    <div class="editor-field">
        @Html.PasswordFor(model => model.userPassword, new { @placeholder = "Password" })
        @Html.ValidationMessageFor(model => model.userPassword)
    </div>
    
    <div class="editor-field">
        @Html.HiddenFor(model => model.LastLoginTime, new { @Value = System.DateTime.Now })
    </div>
    <p>
        <input type="submit" value="Login" />
    </p>
    
    <div>
        @Html.ActionLink("Forgot password?", "ForgotPassword")
    </div>

}

