@model RegistrationLogin.Models.RoommateDatabase

<link href="~/Content/Shared/css/views.css" rel="stylesheet" />

@{
    ViewBag.Title = "DeleteRequest";
}

@{
    Layout = "~/Content/Shared/_LayoutDatabase.cshtml";
}

<h2>Delete Request</h2>

            <button type="button" class="btn btn-info btn-xs"  onclick="location.href='@Url.Action("UserRequestsForRoommate", "Database", new { id = Model.ID})'">Back to My Requests</button>

