@model RegistrationLogin.Models.RoommateDatabase

<link href="~/Content/Shared/css/views.css" rel="stylesheet" />

@{
    Layout = "~/Content/Shared/_LayoutDatabase.cshtml";
}

@{
    ViewBag.Title = "RoommateReuqest";
}

    <h2 style= "font-family:Cambria; color:coral; padding-bottom:10px; padding-left:35px; font-size:28px;"> Roommate Finder Request</h2>

    <div class="row">
         <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                       <div class="reuestForm">
 
                        <div class="panel panel-default">
                            <div class="panel-body">
                                <img class="roommateReq" src="~/Content/Shared/images/Column/roommates2.png">

                                <h5>1. Fill out some basic information and post a new request in database.</h5>
                            </div>
                        </div>
                        <div class="panel panel-default">
                            <div class="panel-body">
                                <img class="roommateReq" src="~/Content/Shared/images/Column/inbox.png">
                                <h5>2. People interested in your request may contact you. Check your inbox timely.</h5>
                            </div>
                        </div>
                        <div class="panel panel-default">
                            <div class="panel-body">
                                <img class="roommateReq" src="~/Content/Shared/images/Column/home1.png">
                                <h5>3. We wish you to get a happenning roommate and a happy place to live.</h5>
                            </div>
                        </div>
                    </div>
             </div>


        

        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
            <div class="reuestForm">
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(true)

          <p style= "font-family:sans-serif; color:green; margin-top:-10px; font-size:18px; " >@ViewBag.MessageReq</p>
                 
                    <div class="editor-field">

                        @Html.TextBoxFor(model => model.Name,new { @class = "form-control", autofocus="autofocus", required = "required",@placeholder = "Your Name or Nickname" })
                        @Html.ValidationMessageFor(model => model.Name)
                    </div>

                    <div class="editor-field">
                        @Html.DropDownList("SelectOptionForPartner", new List<SelectListItem>
                            {
                                new SelectListItem {Text= "Looking for a Room", Value="Looking for a Room"},
                                new SelectListItem {Text= "Looking for a Roommate", Value="Looking for a Roommate"},
                                new SelectListItem {Text= "Looking for both", Value="Looking For Both"},
                                new SelectListItem {Text= "Other", Value="Other"}
                                
                            }, "Select the option",new { @class = "form-control", required = "required", @placeholder = "Enter the valid option" })
                        @Html.ValidationMessageFor(model => model.SelectOptionForPartner)
                    </div>

                    <div class="editor-field">
                        @Html.DropDownList("PartnerGender", new List<SelectListItem>
                            {
                                new SelectListItem {Text= "Male", Value="Male"},
                                new SelectListItem {Text= "Female", Value="Female"},
                                new SelectListItem {Text= "Any (male/female)", Value="Any (male/female)"},
                                new SelectListItem {Text= "None", Value="None"}
                            }, "Select the gender of a partner you are looking for ", new { @class = "form-control", required = "required", @placeholder = "Enter the valid option" })
                        @Html.ValidationMessageFor(model => model.PartnerGender)
                    </div>

                    <div class="editor-field">
                        @Html.TextBoxFor(model => model.Location, new { @class = "form-control", required = "required", @placeholder = "Enter the location"})
                        @Html.ValidationMessageFor(model => model.Location)
                    </div>

              <div class="editor-field">
            @Html.TextAreaFor(model => model.MessageMail, new { @class = "form-control", @Rows = "6", Type="text", required="required", @placeholder = "Your Message"})
                    @Html.ValidationMessageFor(model => model.MessageMail)
                </div>

                    <div class="editor-field">
                     @Html.HiddenFor(model => model.Requested_Date, new { @Value=System.DateTime.Now})
                      </div>
                    
                   <div class="editor-field">
                     @Html.HiddenFor(model => model.UserID)
                      </div>
                                        
                    <p>
                        <input type="submit" value="Post" />
                    </p>
            }

            <div>
                @Html.ActionLink("Back to Available Requets", "RoomateDatabaseGrid", "Database")
            </div>

        </div>

            </div>
    </div>

