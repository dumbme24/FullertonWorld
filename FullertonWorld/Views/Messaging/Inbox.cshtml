@model IEnumerable<RegistrationLogin.Models.InboxViewModelDTO>

<link href="~/Content/Shared/css/views.css" rel="stylesheet" />

@{
    ViewBag.Title = "Inbox";
}

@{
    Layout = "~/Content/Shared/_LayoutDatabase.cshtml";
}

<h2>Inbox</h2>

<div style="overflow-x:auto; overflow-y:auto;">
<table>
    <tr>

         <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
@*        <th>
            @Html.DisplayNameFor(model => model.RequestID)
        </th> *@
        <th>
            @Html.DisplayNameFor(model => model.MessageMail)
        </th>
        <th>
            @Html.DisplayName("Option")
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
           @Html.HiddenFor(modelItem => item.MessageID)
       
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
@*        <td>
            @Html.DisplayFor(modelItem => item.RequestID)
        </td>  *@
        <td>
            @Html.DisplayFor(modelItem => item.MessageMail)
        </td>
        <td>
            @Html.ActionLink("Reply", "ReplyBack", "Messaging", new {id=item.MessageID}, null) 
        </td>
    </tr>
}

</table>
</div>