@model RegistrationLogin.Models.ForgotPassword

@{
    ViewBag.Title = "ForgotPassword";
}

@{
    Layout = "~/Content/Shared/_LayoutRegistration.cshtml";
}

<h4>Forgot Password</h4>
    <hr />

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

        <div class="editor-field">
            @Html.TextBoxFor(model => model.Email , new { @placeholder = "Enter your Email Id to recover the account password"})
            @Html.ValidationMessageFor(model => model.Email)
        </div>

        <p>
            <input type="submit" value="Send password to Email" />
        </p>
    
        if (ViewBag.Message != null)
    {
         <h4>@ViewBag.Message</h4>
    }

}

<div>
    @Html.ActionLink("Back to Login", "Login")
</div>
