    <div class="display-label">
      <h4>   @Html.DisplayNameFor(model => model.SelectOptionForPartner) </h4>
    </div>
    <div class="display-field">
       <h3>  @Html.DisplayFor(model => model.SelectOptionForPartner) </h3>
    </div>

    <div class="display-label">
       <h4>  @Html.DisplayNameFor(model => model.PartnerGender) </h4>
    </div>
    <div class="display-field">
